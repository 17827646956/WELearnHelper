{
    "manifest_version": 3,
    "name": "WELearn网课助手",
    "version": "1.0.0",
    "description": "显示WE Learn随行课堂题目答案；支持班级测试；自动答题；刷时长；开放自定义设置",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_title": "WELearn网课助手"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://course.sflep.com/*",
                "*://welearn.sflep.com/*",
                "*://courseappserver.sflep.com/*",
                "*://centercourseware.sflep.com/*"
            ],
            "js": [
                "inject.js",
                "content.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://localhost/*",
        "*://47.100.166.53/*",
        "*://course.sflep.com/*",
        "*://welearn.sflep.com/*",
        "*://courseappserver.sflep.com/*",
        "*://centercourseware.sflep.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "index.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "homepage_url": "https://www.github.com/SSmJaE/",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; connect-src http://localhost http://47.100.166.53;"
    }
}